{
    "manifest_version": 3,
    "name": "引用元コピー機能",
    "version": "1.0.0",
    "description": "選択したテキストを学術的な引用形式で自動コピー",
    "permissions": [
      "contextMenus",
      "activeTab",
      "clipboardWrite"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }